{
    "name": "read-more-link",
    "version": "1.0.0",
    "description": "Gutenberg block to insert stylized links to posts.",
    "main": "build/index.js",
    "scripts": {
      "build": "wp-scripts build",
      "start": "wp-scripts start",
      "test": "wp-scripts test-unit-js",
      "lint": "eslint . --ext .js,.jsx",
      "lint:fix": "eslint src --ext .js,.jsx --fix",
      "format": "prettier --write ."
    },
    "author": "Addae ABeng",
    "license": "GPL-2.0+",
    "devDependencies": {
      "@babel/preset-react": "^7.27.1",
      "@testing-library/jest-dom": "^6.4.4",
      "@testing-library/react": "^16.3.0",
      "@wordpress/babel-preset-default": "^8.27.0",
      "@wordpress/eslint-plugin": "^22.13.0",
      "@wordpress/scripts": "^30.0.0",
      "babel-jest": "^30.0.5",
      "eslint": "^8.57.1",
      "eslint-config-prettier": "^10.1.8",
      "eslint-config-wordpress": "^2.0.0",
      "eslint-plugin-jsx-a11y": "^6.10.2",
      "eslint-plugin-react": "^7.37.5",
      "prettier": "^3.6.2",
      "react": "^18.3.1",
      "react-dom": "^18.3.1"
    },
    "jest": {
      "testEnvironment": "jsdom",
      "setupFilesAfterEnv": [
        "<rootDir>/jest.setup.js"
      ],
      "moduleNameMapper": {
        "^@wordpress/(.*)$": "<rootDir>/__mocks__/wordpress/$1.js"
      },
      "transform": {
        "^.+\\.[jt]sx?$": "babel-jest"
      }
    }
  }
  